<p id="notice"><%= notice %></p>

<h1>Pages</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Is homepage</th>
      <th>Is dashboard</th>
      <th>Requires authentication</th>
      <th>Header html</th>
      <th>Is in nav</th>
      <th>Body html</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.title %></td>
        <td><%= page.description %></td>
        <td><%= page.is_homepage %></td>
        <td><%= page.is_dashboard %></td>
        <td><%= page.requires_authentication %></td>
        <td><%= page.header_html %></td>
        <td><%= page.is_in_nav %></td>
        <td><%= page.body_html %></td>
        <td><%= page.url %></td>
        <td><%= link_to 'Show', page %></td>
        <td><%= link_to 'Edit', edit_page_path(page) %></td>
        <td><%= link_to 'Destroy', page, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Page', new_page_path %>
